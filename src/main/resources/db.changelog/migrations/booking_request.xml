<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="001" author="natalia_zubareva" runOnChange="true">
        <createTable tableName="booking_request">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="client_id" type="bigint">
                <constraints foreignKeyName="client_id" references="clients(id)"/>
            </column>
            <column name="room_id" type="bigint">
                <constraints foreignKeyName="room_id" references="room_types(id)"/>
            </column>
            <column name="date_start" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="date_end" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(512)">
            </column>
            <column name="children" type="integer">
            </column>
            <column name="adults" type="integer">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>