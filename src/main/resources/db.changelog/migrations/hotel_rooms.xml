<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="001" author="natalia_zubareva">
        <createTable tableName="hotel_rooms">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="room_number" type="integer">
            </column>
            <column name="title" type="varchar(25)">
            </column>
            <column name="type_id" type="bigint">
                <constraints foreignKeyName="type_id" references="room_types(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>